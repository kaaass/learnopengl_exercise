{
// 有关 tasks.json 格式的文档，请参见
    // https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGLEW",
                "-lglfw",
                "-lGL",
                "-lX11",
                "-lpthread",
                "-lXrandr",
                "-lXi",
                "-lglad",
                "-I",
                "${workspaceFolder}/include",
                "-L",
                "${workspaceFolder}/lib",
                "-ldl"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}